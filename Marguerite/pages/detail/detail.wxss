/* pages/detail/detail.wxss */
.dContainer{
  padding-bottom:150rpx; 
}
.mainImg{
  display: block;
  width:100%;
}

.mainImg image{
  width: 100%;
}

.gName{
  display: block;
  font-size: 30rpx;
  padding:20rpx;
}

.gPrice{
  text-align: center;
  margin-bottom: 20rpx;
}

.gPrice text{
  color: #e17b34;
  font-size: 33rpx;
}

.gTbUrl {
  text-align: center;
  margin-bottom: 20rpx;
}

.gTbUrl text{
  font-size: 30rpx;
  display: block;
}

.gTbUrl .shopName{
  font-size: 34rpx;
  color: #e17b34
}

 .gBtn{
  bottom: 0;
  position: fixed;
  width:100%;
  padding: 0;
} 

 .gBtn button{
   display: inline-block;
   width: 50%;
   border-radius: 0;
   margin-bottom:-12rpx;
   font-size: 36rpx;
 }

 .gDBox{
  align-items: center;
  padding:0;
  display: flex;
  flex-flow: row wrap;
    justify-content:space-around;
  margin-bottom: 110rpx;  
}
.gDBox view{
  display: inline-block;
  width: 300rpx;
  height:300rpx;
  margin: 15rpx;
  background-size: contain;
  border: 1rpx solid #f3f3f3;
}

.add{
  position: fixed;
  bottom:0;
  z-index: 1000;
  background-color: #fff;
  width: 100%;
  padding-bottom: 50rpx;
  padding:30rpx;
  box-sizing: border-box;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #999;
  z-index: 500;
  top:0;
  left: 0;
  opacity: 0.8
}